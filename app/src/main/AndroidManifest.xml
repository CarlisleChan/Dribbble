<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="0"
    android:versionName="0.5"
    package="com.carlise.dribbble">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.DribbbleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/drible"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".main.LoginActivity"
            android:noHistory="true" />
        <activity android:name=".users.UserInfoActivity" />
        <activity android:name=".main.HomeActivity" />
        <activity android:name=".shot.ShotDetailActivity" />
        <activity android:name=".shot.InputActivity" />
        <activity android:name=".users.UsersActivity" />
        <activity android:name=".shot.ShotsActivity" />
        <activity android:name=".bucket.BucketsActivity" />
        <activity
            android:name=".main.AboutActivity"
            android:theme="@style/AppTheme" />

    </application>

</manifest>
